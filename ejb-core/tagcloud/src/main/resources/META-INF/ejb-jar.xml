<ejb-jar id="ejb-jar_ID" version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <description>no description</description>
  <display-name>TagCloudJar</display-name>
  <enterprise-beans>
    <session>
      <description>no description</description>
      <display-name>TagCloudBm</display-name>
      <ejb-name>TagCloudBm</ejb-name>
      <home>com.silverpeas.tagcloud.ejb.TagCloudBmHome</home>
      <remote>com.silverpeas.tagcloud.ejb.TagCloudBm</remote>
      <ejb-class>com.silverpeas.tagcloud.ejb.TagCloudBmEJB</ejb-class>
      <session-type>Stateless</session-type>	
      <transaction-type>Container</transaction-type>      
      <resource-ref>
        <res-ref-name>jdbc/Silverpeas</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>TagCloudBm</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name> * </method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TagCloudBm</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>createTagCloud</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>