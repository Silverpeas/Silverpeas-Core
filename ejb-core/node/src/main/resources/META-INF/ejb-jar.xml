<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <description>no description</description>
  <display-name>NodeJar</display-name>
  <enterprise-beans>
    <entity>
      <description>no description</description>
      <display-name>ejb/Node</display-name>
      <ejb-name>ejb/Node</ejb-name>
      <home>com.stratelia.webactiv.util.node.ejb.NodeHome</home>
      <remote>com.stratelia.webactiv.util.node.ejb.Node</remote>
      <ejb-class>com.stratelia.webactiv.util.node.ejb.NodeEJB</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>com.stratelia.webactiv.util.node.model.NodePK</prim-key-class>
      <reentrant>False</reentrant>
      <resource-ref>
				<res-ref-name>jdbc/Silverpeas</res-ref-name>
				<res-type>javax.sql.DataSource</res-type>
				<res-auth>Container</res-auth>
      </resource-ref>
    </entity>
    <session>
      <description>no description</description>
      <display-name>ejb/NodeBm</display-name>
      <ejb-name>ejb/NodeBm</ejb-name>
      <home>com.stratelia.webactiv.util.node.control.NodeBmHome</home>
      <remote>com.stratelia.webactiv.util.node.control.NodeBm</remote>
      <ejb-class>com.stratelia.webactiv.util.node.control.NodeBmEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-ref>
				<ejb-ref-name>ejb/Node</ejb-ref-name>
				<ejb-ref-type>Entity</ejb-ref-type>
				<home>com.stratelia.webactiv.util.node.ejb.NodeHome</home>
				<remote>com.stratelia.webactiv.util.node.ejb.Node</remote>
				<ejb-link>ejb/Node</ejb-link>
      </ejb-ref>
      <resource-ref>
				<res-ref-name>jdbc/Silverpeas</res-ref-name>
				<res-type>javax.sql.DataSource</res-type>
				<res-auth>Container</res-auth>
      </resource-ref>
    </session>
    <session>
      <description>no description</description>
      <display-name>ejb/CoordinatesBm</display-name>
      <ejb-name>ejb/CoordinatesBm</ejb-name>
      <home>com.stratelia.webactiv.util.coordinates.control.CoordinatesBmHome</home>
      <remote>com.stratelia.webactiv.util.coordinates.control.CoordinatesBm</remote>
      <ejb-class>com.stratelia.webactiv.util.coordinates.control.CoordinatesBmEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
		<res-ref-name>jdbc/Silverpeas</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
      </resource-ref>
    </session>
    <session>
      <description>no description</description>
      <display-name>ejb/SubscribeBm</display-name>
      <ejb-name>ejb/SubscribeBm</ejb-name>
      <home>com.stratelia.webactiv.util.subscribe.control.SubscribeBmHome</home>
      <remote>com.stratelia.webactiv.util.subscribe.control.SubscribeBm</remote>
      <ejb-class>com.stratelia.webactiv.util.subscribe.control.SubscribeBmEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
		<res-ref-name>jdbc/Silverpeas</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
				<ejb-name>ejb/Node</ejb-name>
				<method-name>*</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
				<ejb-name>ejb/NodeBm</ejb-name>
				<method-name>*</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
				<ejb-name>ejb/NodeBm</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>removeNode</method-name>
				<method-params>
					<method-param>com.stratelia.webactiv.util.node.model.NodePK</method-param>
				</method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/CoordinatesBm</ejb-name>
		<method-name>*</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/CoordinatesBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>addCoordinate</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/CoordinatesBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>deleteCoordinates</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/CoordinatesBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>deleteCoordinatesByPoints</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/CoordinatesBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>addPointToAllCoordinates</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/SubscribeBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>*</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/SubscribeBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>removeSubscribe</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/SubscribeBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>removeNodeSubscribes</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/SubscribeBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>addSubscribe</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
		<ejb-name>ejb/SubscribeBm</ejb-name>
		<method-intf>Remote</method-intf>
		<method-name>removeUserSubscribes</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>