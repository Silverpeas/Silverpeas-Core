      <bind-xml name="workingUsers" />
    </field>
    <field name="lockingUsers" collection="vector" type="org.silverpeas.core.workflow.engine.instance.LockingUser" set-method="castor_setLockingUsers" get-method="castor_getLockingUsers">
      <sql many-key="instanceid" />
      <bind-xml name="lockingUsers" />
