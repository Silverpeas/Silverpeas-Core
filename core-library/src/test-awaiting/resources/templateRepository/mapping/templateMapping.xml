<mapping>
	<class name="org.silverpeas.core.contribution.content.form.record.GenericRecordTemplate">
		<map-to xml="recordTemplate"/>
		<field name="fieldList" type="org.silverpeas.core.contribution.content.form.record.GenericFieldTemplate" collection="arraylist">
			<bind-xml name="fieldTemplate" node="element"/>
		</field>
	</class>
	<class name="org.silverpeas.core.contribution.content.form.record.GenericFieldTemplate">
		<map-to xml="fieldTemplate"/>
		<field name="fieldName" type="string">
			<bind-xml name="fieldName" node="element"/>
		</field>
		<field name="typeName" type="string">
			<bind-xml name="typeName" node="element"/>
		</field>
		<field name="displayerName" type="string">
			<bind-xml name="displayerName" node="element"/>
		</field>
		<field name="isMandatory" type="boolean" get-method="isMandatory" set-method="setMandatory">
			<bind-xml name="isMandatory" node="element"/>
		</field>
		<field name="isReadOnly" type="boolean" get-method="isReadOnly" set-method="setReadOnly">
			<bind-xml name="isReadOnly" node="element"/>
		</field>
		<field name="isDisabled" type="boolean" get-method="isDisabled" set-method="setDisabled">
			<bind-xml name="isDisabled" node="element"/>
		</field>
		<field name="isHidden" type="boolean" get-method="isHidden" set-method="setHidden">
			<bind-xml name="isHidden" node="element"/>
		</field>
		<field name="labelsObj" type="org.silverpeas.core.contribution.content.form.record.Label" collection="arraylist">
			<bind-xml name="label" node="element"/>
		</field>
		<field name="parametersObj" type="org.silverpeas.core.contribution.content.form.record.Parameter" collection="arraylist">
			<bind-xml name="parameter" node="element"/>
		</field>
	</class>
	<class name="org.silverpeas.core.contribution.content.form.record.Label">
		<map-to xml="label"/>
		<field name="label" type="string">
			<bind-xml name="labelName" node="element"/>
		</field>
		<field name="language" type="string">
			<bind-xml name="language" node="element"/>
		</field>
	</class>
	<!--<class name="Parameter">
		<map-to xml="parameter"/>
		<field name="name" type="string">
			<bind-xml name="name" node="element"/>
		</field>
		<field name="value" type="string">
			<bind-xml name="value" node="element"/>
		</field>
	</class>-->

	<class name="org.silverpeas.core.contribution.content.form.record.Parameter">
		<map-to xml="parameter"/>
		<field name="name" type="string">
			<bind-xml name="name" node="element"/>
		</field>
		<field name="parameterValuesObj" type="org.silverpeas.core.contribution.content.form.record.ParameterValue" collection="arraylist">
			<bind-xml name="value" node="element"/>
		</field>
	</class>

	<class name="org.silverpeas.core.contribution.content.form.record.ParameterValue">
		<map-to xml="value"/>
		<field name="value" type="string">
			<bind-xml node="text"/>
		</field>
		<field name="lang" type="string">
			<bind-xml name="lang" node="attribute"/>
		</field>
	</class>
</mapping>