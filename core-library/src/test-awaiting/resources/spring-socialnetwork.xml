<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd

        http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

  <!-- context:annotation-config />
  <context:component-scan base-package="org.silverpeas.core.socialnetwork.model" /> -->
  <context:component-scan base-package="org.silverpeas.core.socialnetwork.connectors"/>
  <context:component-scan base-package="com.silverpeas.social.mock"/>

  <bean id="socialNetworkService" factory-method="getInstance"
        class="org.silverpeas.core.socialnetwork.service.SocialNetworkService"/>

  <!-- The factory of the controller of the organization dedicated to non IoC managed beans -->
  <!-- ebo <bean id="organizationControllerFactory"
        class="org.silverpeas.core.admin.OrganisationControllerProvider"
        factory-method="getFactory"/> -->

  <jpa:repositories base-package="org.silverpeas.core.socialnetwork.dao"
                    transaction-manager-ref="jpaTransactionManager"/>
  <import resource="spring-jpa.xml"/>

  <util:list id="entities">
    <value>org.silverpeas.core.socialnetwork.model</value>
  </util:list>

  <jdbc:embedded-database id="jpaDataSource" type="H2">
    <jdbc:script
        location="classpath:/com/silverpeas/social/dao/create-database.sql"/>
  </jdbc:embedded-database>

  <import resource="spring-silverpeas.xml"/>
</beans>