<!-- Binding for JAXB and XML component descriptor -->
<jaxb:bindings xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
               xmlns:xsd="http://www.w3.org/2001/XMLSchema"
               jaxb:version="2.0">
  <jaxb:bindings schemaLocation="http://www.silverpeas.org/xsd/component.xsd"  node="/xsd:schema">
    <jaxb:schemaBindings>
      <jaxb:package name="com.silverpeas.admin.components"/>  
    </jaxb:schemaBindings>    
    <jaxb:bindings  schemaLocation="http://www.silverpeas.org/xsd/component.xsd" node="//xsd:complexType[@name='ProfileType']">
      <jaxb:class name="Profile"/>
    </jaxb:bindings>
    <jaxb:bindings  schemaLocation="http://www.silverpeas.org/xsd/component.xsd" node="//xsd:complexType[@name='ParameterType']">
      <jaxb:class name="Parameter"/>
    </jaxb:bindings>
    <jaxb:bindings  schemaLocation="http://www.silverpeas.org/xsd/component.xsd" node="//xsd:complexType[@name='WAComponentType']">
      <jaxb:class name="WAComponent"/>
    </jaxb:bindings>
    <jaxb:bindings  schemaLocation="http://www.silverpeas.org/xsd/component.xsd" node="//xsd:complexType[@name='ParameterOptionType']">
      <jaxb:class name="Option"/>
    </jaxb:bindings>
    <jaxb:bindings  schemaLocation="http://www.silverpeas.org/xsd/component.xsd" node="//xsd:complexType[@name='MessageType']">
      <jaxb:class name="Message"/>
    </jaxb:bindings>
  </jaxb:bindings>
</jaxb:bindings>